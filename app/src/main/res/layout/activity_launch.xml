<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeContactsControll"
        android:layout_centerHorizontal="true"
        android:text="通讯录"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/seeContactsControll"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignLeft="@+id/lockControl"
        android:layout_below="@+id/lockText"
        android:layout_marginTop="74dp"
        android:background="@drawable/seeContactsButton"
        android:onClick="seeContacts" />

    <ImageButton
        android:id="@+id/lockControl"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/lockButton"
        android:onClick="startLockScreen" />

    <TextView
        android:id="@+id/lockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockControl"
        android:layout_centerHorizontal="true"
        android:text="启动锁屏"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>