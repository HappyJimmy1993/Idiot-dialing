<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    >

    <DigitalClock
        android:id="@+id/digitalClock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:gravity="center"
        android:textSize="50sp"/> 
    
    <LinearLayout
        android:id="@+id/concactLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/digitalClock"
        android:orientation="horizontal"
        android:weightSum="3">
        
        <ImageButton
            android:background="@drawable/leftButton"
            android:layout_width="93dp"
        	android:layout_height="match_parent"
        	android:layout_alignParentLeft = "true"
        	android:layout_marginLeft="5dp"
        	android:text="prev"
        	android:onClick="turnLeft"
        />
        
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/contactImg"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:src="@drawable/phone" />

        </LinearLayout>

        <ImageButton
            android:background="@drawable/rightButton"
           	android:alignParentRight="true"
           	android:layout_marginRight="0dp"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:onClick="turnRight"
            android:text="next" />

    </LinearLayout>
    


    <ImageView
        android:id="@+id/unlock_key"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="unlock"
        android:src="@drawable/key" />

    <ImageButton
        android:id="@+id/pressToSay"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_above="@id/unlock_key"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/recordButton"
        android:onClick="" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concactLinerLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ff000000"
        android:text="FirstOne"
        android:textSize="40sp" />

</RelativeLayout>