<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/incomingImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/phone"/>
    <TextView
        android:id="@+id/incomingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incomingImg"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="Zhan San"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/incomingName">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="deny"
            android:onClick="denyPhoneCall"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="Accept"
            android:onClick="answerPhoneCall"/>
    </LinearLayout>
</RelativeLayout>