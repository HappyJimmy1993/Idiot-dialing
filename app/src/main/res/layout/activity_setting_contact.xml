<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    
    <LinearLayout 
        android:orientation="vertical" 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    	<LinearLayout
    	    android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            
    	    <ImageView
    	        android:id="@+id/settingContactImage"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
                android:onClick="choosePhoto"
    	        android:src="@drawable/address"/>
    		<TextView
        		android:id="@+id/settingContactName"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:gravity="center"
        		android:textSize="45dp"
        		android:textColor="#000000"
        		android:text="ZhanSan"/>
    		<TextView
        		android:id="@+id/settingContactPhone"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:textSize="30dp"
        		android:gravity="center"
        		android:text="1380000000"
        		android:textColor="#000000"/>
        </LinearLayout>
        
    	<LinearLayout
    	    android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
    		<TextView
        		android:id="@+id/settingText"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text = "@string/default_button"
        		android:textSize="30dp"
        		android:textColor="#000000"/>
    		<ImageButton
        		android:id="@+id/settingStartRecording"
        		android:layout_width="200dp"
        		android:layout_height="200dp"
        		android:layout_alignParentBottom="true"
        		android:layout_centerHorizontal="true"
        		android:background="@drawable/recordbutton"
        		android:clickable="true"
        		 />

    	</LinearLayout>
    	
    	<LinearLayout
    	    android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

    		<ImageView
    		    android:id="@+id/addingImage"
    		    android:layout_height="wrap_content"
    		    android:layout_width="wrap_content"
    		    android:clickable="true"
    		    android:src="@drawable/heart2"
				android:onClick="toggleFavorite"/>
    	</LinearLayout>
	</LinearLayout>
	
	
</RelativeLayout>

